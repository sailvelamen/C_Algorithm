#include<stdio.h>

void main()
{
    int i,n,sum = 0;
    printf("输入数值：");
    scanf("%d",&n);
    for(i = 0; i < n; i++)
    {
        if(i % 2 != 0)
            continue;
        sum += i;
    }
    printf("%d以内的偶数和为：%d",n,sum);
}
